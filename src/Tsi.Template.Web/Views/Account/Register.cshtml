@using Tsi.Template.ViewModels.Common;
@model UserRegisterModel;

@{
    Layout = "_LoginLayout";
}

<h2>Login</h2>

<div class="card">
    <div class="card-body">
        <form asp-controller="Account" asp-action="Register" method="post">

            <div class="form-group">
                @Html.DisplayNameFor(model => model.FirstName)
                <input type="text" id="FirstName" name="FirstName" class="form-control" value="@Model.FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.DisplayNameFor(model => model.LastName)
                <input type="text" id="LastName" name="LastName" class="form-control" value="@Model.LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            @if (Model.UserNameEnabled)
            {
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Username)
                    <input type="text" id="Username" name="Username" class="form-control" value="@Model.Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Email)
                    <input type="text" id="Email" name="Email" class="form-control" value="@Model.Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                @Html.DisplayNameFor(model => model.PhoneNumber)
                <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>



            <div class="form-group">
                @Html.DisplayNameFor(model => model.Password)
                <input type="password" id="Password" name="Password" class="form-control" value="@Model.Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.ConfirmPassword)
                <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" value="@Model.ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="form-group text-center">
                <button type="submit" name="save" class="btn btn-primary col-md-3">
                    <i class="far fa-save"></i> Login
                </button>
            </div>
        </form>
    </div>
</div>